entrypoint = "main.exs"
run = "elixir main.exs"

[env]
HEX_HOME = "$REPL_HOME/.hex"
MIX_HOME = "$REPL_HOME/.mix"

[nix]
channel = "stable-24_05"

[[ports]]
localPort = 4000
externalPort = 80
exposeLocalhost = true

[deployment]
build = ["sh", "-c", "mix deps.get && mix assets.deploy && mix compile"]
run = ["sh", "-c", "mix phx.server"]
deploymentTarget = "cloudrun"
